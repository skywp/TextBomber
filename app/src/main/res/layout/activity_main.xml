<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.wp.textbomber.MainActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="请输入相应的手机号码："
        android:inputType="phone"
        android:ems="10"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="88dp"
        android:id="@+id/ed_phone" />

    <Button
        android:text="发送1次..."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ed_phone"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="67dp"
        android:id="@+id/button" />



    <CheckBox
        android:visibility="gone"
        android:text="5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:id="@+id/cb5"
        android:layout_below="@+id/button"
        android:layout_alignLeft="@+id/ed_phone"
        android:layout_alignStart="@+id/ed_phone"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="19dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="请输入短信内容"
        android:ems="10"
        android:layout_below="@+id/ed_phone"
        android:layout_alignRight="@+id/ed_phone"
        android:layout_alignEnd="@+id/ed_phone"
        android:id="@+id/ed_sms_content" />

    <CheckBox
        android:visibility="gone"
        android:text="10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox2"
        android:layout_alignBaseline="@+id/cb5"
        android:layout_alignBottom="@+id/cb5"
        android:layout_alignRight="@+id/ed_sms_content"
        android:layout_alignEnd="@+id/ed_sms_content"
        android:layout_marginRight="48dp"
        android:layout_marginEnd="48dp" />

    <Button
        android:text="发送5次..."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button"
        android:layout_alignRight="@+id/button"
        android:layout_alignEnd="@+id/button"
        android:layout_marginTop="31dp"
        android:id="@+id/button2" />
</RelativeLayout>
